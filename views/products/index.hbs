{{#extends "base"}}
  {{#block "content"}}
    <table class="table table-bordered">
      <thead class="table-secondary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td scope="row">
              1
            </td>
            <td>
              {{this.id}}
            </td>
            <td>
              {{this.name}}
            </td>
            <td>
              {{this.price}}
            </td>
            <td>
              {{this.description}}
            </td>
            <td>
              <a href="" type="button" class="btn btn-light btn-small"><i
                  class="bi bi-plus-circle"
                ></i>
                Add to Cart</a>
              <a href="" type="button" class="btn btn-light btn-small"><i
                  class="bi bi-heart"
                ></i>
                Whishlist</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/block}}
{{/extends}}